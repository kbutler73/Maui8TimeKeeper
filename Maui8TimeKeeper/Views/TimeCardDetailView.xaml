<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui8TimeKeeper.Views.TimeCardDetailView"
             xmlns:vm="clr-namespace:Maui8TimeKeeper.ViewModels"
             x:DataType="vm:TimeCardDetailViewModel"
             Title="{Binding TimeCard.Name}">
    <Grid RowDefinitions="Auto, Auto, Auto, *" ColumnDefinitions="Auto, *" ColumnSpacing="10">
        <Label Text="Name" />
        <Entry Grid.Column="1" Text="{Binding Name}" />

        <Label Grid.Row="1" Text="Total Time" />
        <Label Grid.Row="1" Grid.Column="1" Text="{Binding TimeCard.TotalTime, StringFormat='{0:hh}:{0:mm}:{0:ss}'}" />

        <Label Grid.Row="2" Text="{Binding TimeCard.Name}" />

        <Button Grid.Row="3" Grid.ColumnSpan="2" VerticalOptions="End" HorizontalOptions="CenterAndExpand" Text="Save" Command="{Binding SaveCommand}" CommandParameter="{Binding .}" />
    </Grid>
</ContentPage>